---
const navLinks = [
  { label: "الرئيسية", href: "/" },
  { label: "دليل مزيل العرق", href: "/deodorant/" },
  { label: "التصنيع الخاص", href: "/contact/" },
  { label: "التواصل", href: "/contact/" }
];
---
<header class="sticky top-0 z-50 border-b border-slate-200 bg-white/90 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
    <a class="flex items-center gap-2 text-lg font-bold text-primary-700" href="/">
      <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-primary-700 text-white">MF</span>
      مصنع الشرق الأوسط لمزيلات العرق
    </a>
    <nav class="hidden items-center gap-6 text-sm font-semibold text-slate-700 md:flex">
      {navLinks.map((link) => (
        <a class="transition hover:text-primary-700" href={link.href}>{link.label}</a>
      ))}
    </nav>
    <details class="md:hidden">
      <summary class="cursor-pointer rounded-md border border-slate-200 px-3 py-2 text-sm font-semibold">القائمة</summary>
      <div class="mt-2 flex flex-col gap-2 rounded-md border border-slate-200 bg-white p-3 text-sm">
        {navLinks.map((link) => (
          <a class="rounded-md px-2 py-1 transition hover:bg-slate-100" href={link.href}>{link.label}</a>
        ))}
      </div>
    </details>
  </div>
</header>
