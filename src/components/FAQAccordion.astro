---
const { items = [] } = Astro.props;
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: items.map((item) => ({
    "@type": "Question",
    name: item.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: item.answer
    }
  }))
};
---
<section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <h2 class="text-xl font-bold text-primary-700">أسئلة شائعة</h2>
  <div class="mt-4 space-y-3">
    {items.map((item) => (
      <details class="rounded-xl border border-slate-200 p-4">
        <summary class="cursor-pointer font-semibold text-slate-800">{item.question}</summary>
        <p class="mt-2 text-sm leading-relaxed text-slate-600">{item.answer}</p>
      </details>
    ))}
  </div>
</section>
<script type="application/ld+json">
  {JSON.stringify(faqSchema)}
</script>
